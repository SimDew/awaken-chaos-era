{% extends 'base.html.twig' %}

{% block title %}Ajouter une Compétence{% endblock %}

{% block body %}

    <h1>Ajouter une Compétence</h1>
    <form method="post">

        {# ----- information principale de la competence ----- #}
        <label for="name">Nom de la Compétence</label>
        <input type="text" name="name" id="name" required>

        <label for="type">Type</label>
        <select name="type" id="type">
            {% for ability_type in ability_types %}
                <option value="{{ ability_type.getId }}">{{ ability_type.getAbilityTypeName }}</option>
            {% endfor %}
        </select>

        <label for="description">Description</label>
        <textarea name="description" id="description" cols="30" rows="10" required></textarea>

        <label for="cooldown">Délai de Récupération</label>
        <input type="number" name="cooldown" id="cooldown">

        <label for="image">Image</label>
        <input type="text" name="image" id="image" required>

        {# ----- niveaux de la competence ----- #}
        <label for="level_2">Niveau 2</label>
        <input type="text" name="level_2" id="level_2">

        <label for="level_3">Niveau 3</label>
        <input type="text" name="level_3" id="level_3">

        <label for="level_4">Niveau 4</label>
        <input type="text" name="level_4" id="level_4">

        <label for="level_5">Niveau 5</label>
        <input type="text" name="level_5" id="level_5">

        <label for="level_6">Niveau 6</label>
        <input type="text" name="level_6" id="level_6">

        <label for="level_7">Niveau 7</label>
        <input type="text" name="level_7" id="level_7">

        <label for="level_8">Niveau 8</label>
        <input type="text" name="level_8" id="level_8">

        <button type="submit">Ajouter</button>
    </form>
{% endblock %}
